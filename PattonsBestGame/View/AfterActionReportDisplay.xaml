<UserControl x:Class="Pattons_Best.AfterActionReportDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pattons_Best"
             mc:Ignorable="d" 
             d:DesignHeight="900
             " d:DesignWidth="800">
   <Grid Name="myGrid" MinWidth="600" Background="#FFF7FAF6" >
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="1*"/>
         <ColumnDefinition Width="1*"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
         <RowDefinition Height="Auto"></RowDefinition>
         <RowDefinition Height="Auto"></RowDefinition>
         <RowDefinition Height="Auto"></RowDefinition>
         <RowDefinition Height="Auto"></RowDefinition>
         <RowDefinition Height="Auto"></RowDefinition>
         <RowDefinition Height="Auto"></RowDefinition>
      </Grid.RowDefinitions>
      <Label Name="myLabelHeading" Grid.Row="0" Grid.ColumnSpan="2" FontSize="24" HorizontalAlignment="Center" FontFamily="Arial Rounded MT Bold">After Action Report</Label>
      <StackPanel  Name="myStackPanelInfo" Grid.Row="1" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left">
         <Label>DATE:</Label>
         <Label>TANK NAME:</Label>
         <Label>TANK MODEL:</Label>
         <Label>SITUATION:</Label>
         <Label>WEATHER:</Label>
      </StackPanel>
      <StackPanel  Name="myStackPanelCrew" Grid.Row="1" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
         <FlowDocumentReader Name="myFlowDocumentReader" VerticalAlignment="Top" HorizontalAlignment="Right">
            <FlowDocument>
               <Table BorderBrush='Black' BorderThickness='1'>
                  <Table.Columns>
                     <TableColumn Width='90'/>
                     <TableColumn Width='60'/>
                     <TableColumn Width='140'/>
                     <TableColumn Width='60'/>
                  </Table.Columns>
                  <TableRowGroup>
                     <TableRow  FontSize='12' >
                        <TableCell TextAlignment='Center' BorderBrush='Black' BorderThickness='1'>
                           <Paragraph>Crew</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Center' BorderBrush='Black' BorderThickness='1'>
                           <Paragraph>Rank</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Center' BorderBrush='Black' BorderThickness='1'>
                           <Paragraph>Name</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Center' BorderBrush='Black' BorderThickness='1'>
                           <Paragraph>Rating</Paragraph>
                        </TableCell>
                     </TableRow>
                  </TableRowGroup>
                  <TableRowGroup>
                     <TableRow  FontSize='12'>
                        <TableCell TextAlignment='Right'>
                           <Paragraph>Commander:</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Center'>
                           <Paragraph>Cpl.</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Left'>
                           <Paragraph>Stewart</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Center'>
                           <Paragraph>4</Paragraph>
                        </TableCell>
                     </TableRow>
                     <TableRow  FontSize='12'>
                        <TableCell TextAlignment='Right'>
                           <Paragraph>Gunner:</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Center'>
                           <Paragraph>Cpl.</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Left'>
                           <Paragraph>Murry</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Center'>
                           <Paragraph>3</Paragraph>
                        </TableCell>
                     </TableRow>
                     <TableRow  FontSize='12'>
                        <TableCell TextAlignment='Right'>
                           <Paragraph>Loader:</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Center'>
                           <Paragraph>Pvt.</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Left'>
                           <Paragraph>Bugler</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Center'>
                           <Paragraph>1</Paragraph>
                        </TableCell>
                     </TableRow>
                     <TableRow  FontSize='12'>
                        <TableCell TextAlignment='Right'>
                           <Paragraph>Driver:</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Center'>
                           <Paragraph>Pvt.</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Left'>
                           <Paragraph>Cooper</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Center'>
                           <Paragraph>1</Paragraph>
                        </TableCell>
                     </TableRow>
                     <TableRow  FontSize='12'>
                        <TableCell TextAlignment='Right'>
                           <Paragraph>Asst. Driver:</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Center'>
                           <Paragraph>Pvt.</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Left'>
                           <Paragraph>Hutchinson</Paragraph>
                        </TableCell>
                        <TableCell TextAlignment='Center'>
                           <Paragraph>1</Paragraph>
                        </TableCell>
                     </TableRow>
                  </TableRowGroup>
               </Table>
            </FlowDocument>
         </FlowDocumentReader>
      </StackPanel>
      <Grid Name="myGridTime" Grid.Row="2" Grid.ColumnSpan="2" Background="#FF67D841" >
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
         </Grid.ColumnDefinitions>
         <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
         </Grid.RowDefinitions>
         <Label Name="myLabelTime" Grid.Row="0" Grid.ColumnSpan="8" FontSize="24" HorizontalAlignment="Center" FontFamily="Arial Rounded MT Bold">TIME</Label>
      </Grid>
   </Grid>
</UserControl>

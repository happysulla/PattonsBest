<Window x:Class="Pattons_Best.ShowOptionsSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pattons_Best"
        mc:Ignorable="d"
        Topmost="True" 
        Title="Options Dialog" FontSize="20" Height="440" Width="1170" WindowStartupLocation="CenterScreen">
   <ScrollViewer Name="myScrollViewerInside" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,0,0,0">
      <Grid x:Name="myGrid">
         <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
         </Grid.RowDefinitions>
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
         </Grid.ColumnDefinitions>
         <GroupBox x:Name="myGroupBoxGameType" Grid.Row="0" Grid.ColumnSpan="4" Header="Game Type" FontSize="14"  Margin="10,0,10,0">
            <StackPanel Name="myStackPanelGameType" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,5,5,5" >
               <RadioButton x:Name="myRadioButtonOriginal" GroupName="GameType" Content="Original" Margin="5,0,5,0"  Padding="4,-4,0,0" Click="StackPanelGameType_Click"/>
               <RadioButton x:Name="myRadioButtonGeneralv25No3" GroupName="GameType" Content="General v25 No3" Margin="5,0,5,0"  Padding="4,-4,0,0" Click="StackPanelGameType_Click"/>
               <RadioButton x:Name="myRadioButtonTactics" GroupName="GameType" Content="Tactics" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGameType_Click"/>
               <RadioButton x:Name="myRadioButtonGv25No3AndTactics" GroupName="GameType" Content="General v25 No3 + Tactics" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGameType_Click"/>
               <RadioButton x:Name="myRadioButtonCustom" GroupName="GameType" Content="Custom" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGameType_Click"/>
            </StackPanel>
         </GroupBox>
         <GroupBox x:Name="myGroupBoxScenario" Grid.Row="1" Grid.ColumnSpan="4" Header="Scenario Options" FontSize="14"  Margin="10,0,10,0">
            <StackPanel Name="myStackPanelScenario" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,5,5,5" >
               <RadioButton x:Name="myRadioButtonSingleDay" GroupName="GameScenario" Content="Single Day Game" Margin="5,0,5,0"  Padding="4,-4,0,0" Click="StackPanelScenario_Click"/>
               <RadioButton x:Name="myRadioButtonCampaign" GroupName="GameScenario" Content="Campaign Game" Margin="5,0,5,0"  Padding="4,-4,0,0" Click="StackPanelScenario_Click"/>
               <CheckBox x:Name="myCheckBoxEndOnCmdrDeath"  Content="Game Ends On Commander Death" Margin="15,0,5,0" Padding="4,-4,0,0" Click="StackPanelGameOtherRules_Click"/>
            </StackPanel>
         </GroupBox>
         <GroupBox x:Name="myGroupBoxTutorialSkip" Grid.Row="2" Grid.Column="0" Header="Skip Tutorial Screens" FontSize="14"  Margin="10,0,10,0">
            <StackPanel Name="myStackPanelTutorialSkip" Orientation="Vertical" VerticalAlignment="Top" Margin="5,5,5,5" >
               <CheckBox x:Name="myCheckBoxSkipOpening"  Content="Skip Opening" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelTutorial_Click"/>
               <CheckBox x:Name="myCheckBoxSkipHistorical"  Content="Skip Historical" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelTutorial_Click"/>
               <CheckBox x:Name="myCheckBoxSkipMoveBoard"  Content="Skip Movement Board" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelTutorial_Click"/>
               <CheckBox x:Name="myCheckBoxBattleBoard"  Content="Skip Battle Board" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelTutorial_Click"/>
               <CheckBox x:Name="myCheckBoxTankCard"  Content="Skip Tank Card" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelTutorial_Click"/>
               <CheckBox x:Name="myCheckBoxStartAfterActionReport"  Content="Skip After Action" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelTutorial_Click"/>
            </StackPanel>
         </GroupBox>
         <GroupBox x:Name="myGroupBoxAutoRoll" Grid.Row="2" Grid.Column="1" Header="Auto Rolls" FontSize="14"  Margin="10,0,10,0">
            <StackPanel Name="myStackPanelAutoRoll" Orientation="Vertical" VerticalAlignment="Top" Margin="5,5,5,5" >
               <CheckBox x:Name="myCheckBoxAutoRollRatings"  Content="Auto Roll New Members" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelAutoRolls_Click"/>
               <CheckBox x:Name="myCheckBoxAutoRollAmmoLoad"  Content="Auto Setup Ammo Loads" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelAutoRolls_Click"/>
               <CheckBox x:Name="myCheckBoxAutoPreparation"  Content="Use Previous Battle Preparations" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelAutoRolls_Click"/>
               <CheckBox x:Name="myCheckBoxAutoRollEnemySetup"  Content="Auto Roll Enemy Setup" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelAutoRolls_Click"/>
               <CheckBox x:Name="myCheckBoxAutoRollBowMg"  Content="Auto Roll Bow MG" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelAutoRolls_Click"/>
               <CheckBox x:Name="myCheckBoxAutoAmmoLoad"  Content="Auto Set AmmoReload Counter" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelAutoRolls_Click"/>
            </StackPanel>
         </GroupBox>
         <GroupBox x:Name="myGroupBoxGeneralV25No3" Grid.Row="2" Grid.Column="2" Header="Generalv25No3 Choices" FontSize="14"  Margin="10,0,10,0">
            <StackPanel Name="myStackPanelGeneralV25No3" Orientation="Vertical" VerticalAlignment="Top" Margin="5,5,5,5" >
               <CheckBox x:Name="myCheckBoxAirInterdiction"  Content="Air Interdiction Instead of Smoke" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGeneralV25No3_Click"/>
               <CheckBox x:Name="myCheckBoxTerrainPointValue"  Content="Optional Point Value for Grid" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGeneralV25No3_Click"/>
               <CheckBox x:Name="myCheckBoxTankCoverArc"  Content="Tank Vehicle Covered Arc" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGeneralV25No3_Click"/>
               <CheckBox x:Name="myCheckBoxSlowTransverseCoverArc"  Content="Slow Transverse Covered Arc" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGeneralV25No3_Click"/>
               <CheckBox x:Name="myCheckBoxSpgCoverArc"  Content="Self Propelled Gun Covered Arc" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGeneralV25No3_Click"/>
               <CheckBox x:Name="myCheckBoxAtgCoverArc"  Content="Anti-Tank Gun Covered Arc" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGeneralV25No3_Click"/>
            </StackPanel>
         </GroupBox>
         <GroupBox x:Name="myGroupBoxTactics" Grid.Row="2" Grid.Column="3" Header="Tactics" FontSize="14"  Margin="10,0,10,0">
            <StackPanel Name="myStackPanelOther" Orientation="Vertical" VerticalAlignment="Top" Margin="5,5,5,5" >
               <CheckBox x:Name="myCheckBoxContinueMove"  Content="Increase Chances of Moving in Same Direction" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGameOtherRules_Click"/>
               <CheckBox x:Name="myCheckBoxRearFacingAfterMoveAway"  Content="Increase Chances of Rear Facing after Move-B" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGameOtherRules_Click"/>
               <CheckBox x:Name="myCheckBoxIncreasedMove"  Content="Increase Sherman Consecutive Move Chances" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGameOtherRules_Click"/>
               <CheckBox x:Name="myCheckBoxEnhancedMgFire"  Content="Increase Sherman MG Leathality" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGameOtherRules_Click"/>
               <CheckBox x:Name="myCheckBoxMgSurpressingFire"  Content="LW/MG Interdiction due to MG Fire" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGameOtherRules_Click"/>
               <CheckBox x:Name="myCheckBoxMovingFwdIncreaseAdvanceChances"  Content="Sherman Advancing Increase Friendly Advance" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGameOtherRules_Click"/>
               <CheckBox x:Name="myCheckBoxTerrainPointValueCenter"  Content="Add Random 0-2 Points for Capturing Center Area" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGameOtherRules_Click"/>
            </StackPanel>
         </GroupBox>
         <StackPanel Name="myStackPanelButtons" Grid.Row="3" Grid.ColumnSpan="4"  Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center" Margin="5,5,5,15" >
            <Button x:Name="myButtonCancel" HorizontalAlignment="Center" Width="70" Height="30" VerticalAlignment="Top" Margin="0,10,70,0" FontSize="14" Click="ButtonCancel_Click" IsCancel="True">Cancel</Button>
            <Button x:Name="myButtonOK" HorizontalAlignment="Center" Width="70" Height="30" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="14" Click="ButtonOk_Click" IsDefault="True">OK</Button>
         </StackPanel>
      </Grid>
   </ScrollViewer>
</Window>

      <StackPanel  Name="myStackPanelInfo" Grid.Row="1" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" Margin="0,0,0,0" >
         <Grid Margin="20,0,20,0">
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="150"/>
               <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
               <RowDefinition Height="Auto"></RowDefinition>
               <RowDefinition Height="Auto"></RowDefinition>
               <RowDefinition Height="Auto"></RowDefinition>
               <RowDefinition Height="Auto"></RowDefinition>
               <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" FontFamily="Arial Rounded MT Bold" FontSize="14">DATE:</Label>
            <Label Grid.Row="0" Grid.Column="1" FontFamily="Arial Rounded MT Bold" FontSize="14">
               <Span Name="mySpanDate" TextDecorations="Underline">__________________________________________________</Span>
            </Label>
            <Label Grid.Row="1" Grid.Column="0" FontFamily="Arial Rounded MT Bold" FontSize="14">TANK NAME:</Label>
            <Label Grid.Row="1" Grid.Column="1" FontFamily="Arial Rounded MT Bold" FontSize="14">
               <Span Name="mySpanTankName" TextDecorations="Underline" IsEnabled="false" MouseDown="SpanTankName_MouseDown">__________________________________________________</Span>

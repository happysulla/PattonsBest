<Window x:Class="Pattons_Best.OptionsSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pattons_Best"
        mc:Ignorable="d"
        Title="Options Dialog" FontSize="20" Height="400" Width="700" WindowStartupLocation="CenterScreen">
   <ScrollViewer Name="myScrollViewerInside" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,0,0,0">
      <Grid x:Name="myGrid">
         <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
         </Grid.RowDefinitions>
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
         </Grid.ColumnDefinitions>
         <GroupBox x:Name="myGroupBoxTutorialSkip" Grid.Row="0" Grid.Column="0" Header="Skip Tutorial Screens" FontSize="14"  Margin="10,0,10,0">
            <StackPanel Name="myStackPanelTutorialSkip" Orientation="Vertical" VerticalAlignment="Top" Margin="5,5,5,5" >
               <CheckBox x:Name="myCheckBoxSkipOpening"  Content="Skip Opening" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelTotural_Click"/>
               <CheckBox x:Name="myCheckBoxSkipHistorical"  Content="Skip Historical" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelTotural_Click"/>
               <CheckBox x:Name="myCheckBoxSkipMoveBoard"  Content="Skip Movement Board" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelTotural_Click"/>
               <CheckBox x:Name="myCheckBoxPrinceBattleBoard"  Content="Skip Battle Board" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelTotural_Click"/>
               <CheckBox x:Name="myCheckBoxPrinceTankCard"  Content="Skip Tank Card" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelTotural_Click"/>
               <CheckBox x:Name="myCheckBoxStartAfterActionReport"  Content="Skip After Action" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelTotural_Click"/>
            </StackPanel>
         </GroupBox>
         <GroupBox x:Name="myGroupBoxAutoRoll" Grid.Row="0" Grid.Column="1" Header="Auto Rolls" FontSize="14"  Margin="10,0,10,0">
            <StackPanel Name="myStackPanelAutoRoll" Orientation="Vertical" VerticalAlignment="Top" Margin="5,5,5,5" >
               <CheckBox x:Name="myCheckBoxAutoRollRatings"  Content="Auto Roll New Members" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelAutoRolls_Click"/>
               <CheckBox x:Name="myCheckBoxAutoRollAmmoLoad"  Content="Auto Setup Ammo Loads" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelAutoRolls_Click"/>
               <CheckBox x:Name="myCheckBoxAutoPreparation"  Content="Use Previous Battle Preparations" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelAutoRolls_Click"/>
               <CheckBox x:Name="myCheckBoxAutoRollEnemySetup"  Content="Auto Roll Enemy Setup" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelAutoRolls_Click"/>
            </StackPanel>
         </GroupBox>
         <GroupBox x:Name="myGroupBoxGameChoice" Grid.Row="0" Grid.Column="1" Header="Auto Rolls" FontSize="14"  Margin="10,0,10,0">
            <StackPanel Name="myStackPanelGameChoice" Orientation="Vertical" VerticalAlignment="Top" Margin="5,5,5,5" >
               <CheckBox x:Name="myCheckBoxEndOnCmdrDeath"  Content="Auto Roll New Members" Margin="5,0,5,0" Padding="4,-4,0,0" Click="StackPanelGameChoice_Click"/>
            </StackPanel>
         </GroupBox>
         <StackPanel Name="myStackPanelButtons" Grid.Row="1" Grid.ColumnSpan="5"  Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center" Margin="5,5,5,5" >
            <Button x:Name="myButtonCancel" HorizontalAlignment="Center" Width="70" Height="30" VerticalAlignment="Top" Margin="0,10,50,0" FontSize="14" Click="ButtonCancel_Click" IsCancel="True">Cancel</Button>
            <Button x:Name="myButtonOK" HorizontalAlignment="Center" Width="70" Height="30" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="14" Click="ButtonOk_Click" IsDefault="True">OK</Button>
         </StackPanel>
      </Grid>
   </ScrollViewer>
</Window>

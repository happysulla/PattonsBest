<Table BorderBrush='Black' BorderThickness='1' TextAlignment='Center' Background='AntiqueWhite'>
	<Table.Columns>
		<TableColumn Width='100'/>
		<TableColumn Width='200'/>
      <TableColumn Width='200'/>
      <TableColumn Width='100'/>
	</Table.Columns>
	<TableRowGroup>
		<TableRow  FontSize='18' >
			<TableCell ColumnSpan='4' TextAlignment='Center' BorderBrush='Black' BorderThickness='1'>
				<Paragraph>
					<LineBreak/>SPOTTING TABLE<LineBreak/>
               <Italic>
                  <Run FontSize='12' Text='If the roll is less than or equal to the crew members rating, the target is spotted. If the roll is less than 1/2 (round up) of the rating, the target is also identified. '></Run>
               </Italic>
				</Paragraph>
			</TableCell>
		</TableRow>
	</TableRowGroup>
	<TableRowGroup>
		<TableRow  FontSize='12' >
         <TableCell  TextAlignment='Center' >
            <Paragraph>
               <Bold>
                  <Run Text=' '></Run>
               </Bold>
            </Paragraph>
         </TableCell>
			<TableCell  TextAlignment='Center' >
				<Paragraph>
               <Bold><Run Text='Die Roll     '></Run></Bold>
            </Paragraph>
			</TableCell>
         <TableCell ColumnSpan='2' TextAlignment='Left' >
            <Paragraph>
               <Bold><Run Text='  Result'></Run></Bold>
            </Paragraph>
         </TableCell>
		</TableRow>
	<TableRow  FontSize='12' >
      <TableCell TextAlignment='Center'>
         <Paragraph><Run Text=' '></Run></Paragraph>
      </TableCell>
		<TableCell TextAlignment='Center' Background='White'>
			<Paragraph><Run Text='1'></Run>
            <Run Typography.Variants='Superscript'>1</Run>
         </Paragraph>
		</TableCell>
      <TableCell TextAlignment='Left' Background='White'>
         <Paragraph>
            <Run Text='  Target Spotted and Identified'></Run>
         </Paragraph>
      </TableCell>
      <TableCell TextAlignment='Center'>
         <Paragraph><Run Text=' '></Run></Paragraph>
      </TableCell>
	</TableRow>
      <TableRow  FontSize='12' >
         <TableCell TextAlignment='Center'>
            <Paragraph>
               <Run Text=' '></Run>
            </Paragraph>
         </TableCell>
         <TableCell TextAlignment='Center' >
            <Paragraph><Run Text='&lt;= Rating'></Run></Paragraph>
         </TableCell>
         <TableCell TextAlignment='Left' >
            <Paragraph>
               <Run Text='  Target Spotted'></Run>
            </Paragraph>
         </TableCell>
         <TableCell TextAlignment='Center'>
            <Paragraph>
               <Run Text=' '></Run>
            </Paragraph>
         </TableCell>
      </TableRow>
      <TableRow  FontSize='12' >
         <TableCell TextAlignment='Center'>
            <Paragraph>
               <Run Text=' '></Run>
            </Paragraph>
         </TableCell>
         <TableCell TextAlignment='Center' Background='White'>
            <Paragraph>
               <Run Text='&gt; Rating'></Run>
            </Paragraph>
         </TableCell>
         <TableCell TextAlignment='Left' Background='White'>
            <Paragraph>
               <Run Text='  Target Not Spotted'></Run>
            </Paragraph>
         </TableCell>
         <TableCell TextAlignment='Center'>
            <Paragraph>
               <Run Text=' '></Run>
            </Paragraph>
         </TableCell>
      </TableRow>
      <TableRow  FontSize='12' >
         <TableCell TextAlignment='Center'>
            <Paragraph>
               <Run Text=' '></Run>
            </Paragraph>
         </TableCell>
         <TableCell TextAlignment='Center' >
            <Paragraph>
               <Run Text='9-10'></Run>
               <Run Typography.Variants='Superscript'>2</Run>
            </Paragraph>
         </TableCell>
         <TableCell TextAlignment='Left' >
            <Paragraph>
               <Run Text='  Target Not Spotted'></Run>
            </Paragraph>
         </TableCell>
         <TableCell TextAlignment='Center'>
            <Paragraph>
               <Run Text=' '></Run>
            </Paragraph>
         </TableCell>
      </TableRow>
	</TableRowGroup>
	<TableRowGroup>
		<TableRow  FontSize='12' >
			<TableCell ColumnSpan='4' TextAlignment='Left' BorderBrush='Black' BorderThickness='1'>
				<Paragraph>
               <Bold><Run>Die Roll Modifiers:</Run></Bold>
				</Paragraph>
			</TableCell>
		</TableRow>
      <TableRow  FontSize='12' >
         <TableCell ColumnSpan='2' TextAlignment='Left' >
            <Paragraph>
               
               <Run>+3 Crew member buttoned up</Run><LineBreak/>
               <Run>+2 Commander spotting from vision cupola </Run><LineBreak/>
               <Run>+1 Sherman is moving </Run><LineBreak/>
               <Run>+1 Target in woods, building, fortification, or hull down </Run><LineBreak/>
               <Run>+1 During falling snow or fog weather</Run>
               <Run Typography.Variants='Superscript'>3</Run>
               <Run Text='per '></Run>
               <InlineUIContainer>
                  <Button Content='Weather' FontFamily='Courier New'  FontSize='8'></Button>
               </InlineUIContainer>
               <LineBreak/>
               <Run>+1 Per smoke marker</Run><LineBreak/>
               <Run>+1 Small target</Run> <LineBreak/>
            </Paragraph>
         </TableCell>
         <TableCell ColumnSpan='2' TextAlignment='Left' >
            <Paragraph>
               -1 Large target<LineBreak/>
               -1 Target at medium range<LineBreak/>
               -2 Very large target<LineBreak/>
               -2 Target at close range<LineBreak/>
               -2 Target fired weapons last turn<LineBreak/>
               -3 Target is moving<LineBreak/>
               -3 Target spotted in previous round<LineBreak/>
            </Paragraph>
         </TableCell>
      </TableRow>
	</TableRowGroup>
   <!-- Notes -->
   <TableRowGroup>
      <TableRow  FontSize='12' >
         <TableCell ColumnSpan='4' TextAlignment='Left' BorderBrush='Black' BorderThickness='1'>
            <Paragraph>
               <Run>NOTES:</Run>
               <LineBreak/>
               <Run Text=' (1) An unmodified roll of "1" always spots the target and identifies it.'></Run>
               <LineBreak/>
               <Run Text=' (2) Unmodified rolls of "9" and "10" always means the target is hidden from view in its current position and spotting is impossible.'></Run>
               <LineBreak/>
               <Run Text=' (3) During falling snow and fog, spotting is only possible at close range.'></Run>
               <LineBreak/>
               <Run Text=' (4) The sectors each crewman is eligible to spot are listed on the Tank Card.'></Run>
            </Paragraph>
         </TableCell>
      </TableRow>
   </TableRowGroup>
</Table>
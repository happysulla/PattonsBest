<Table BorderBrush='Black' BorderThickness='1' TextAlignment='Center' Background='LightBlue'>
	<Table.Columns>
		<TableColumn Width='220'/>
		<TableColumn Width='220'/>
	</Table.Columns>
	<TableRowGroup>
		<TableRow  FontSize='18' >
			<TableCell ColumnSpan='2' TextAlignment='Center' BorderBrush='Black' BorderThickness='1'>
				<Paragraph>
					<LineBreak/>PANZERFAUST ATTACK TABLE<LineBreak/>
					<Italic>
						<Run FontSize='12' Text='Determine first from which sector on the Battle Board the Panzerfaust attack is originating '></Run>
						<Run FontSize='12' Text='by rolling 1D according to rules section '></Run>
						<InlineUIContainer>
							<Button Content='r5.12' FontFamily='Courier New'  FontSize='8'></Button>
						</InlineUIContainer>
						<Run FontSize='12' Text='. If the sector is not US controlled, place the Panzerfaust Attack marker in the sectors '></Run>
						<Run FontSize='12' Text='close range zone. Roll on Table I to see if an attack occurs. If an attack occurs, '></Run>
						<Run FontSize='12' Text='roll on Table II to see if the Panzerfaust hits your tank. If it hits, roll on Table III '></Run>
						<Run FontSize='12' Text='to see if yoru tank is KO. If no attack occurs, the attack does not hit, or your tank is not KO, the random event has no effect.'></Run>
					</Italic>
				</Paragraph>
			</TableCell>
		</TableRow>
	</TableRowGroup>
	<TableRowGroup>
		<!-- Header	-->
		<TableRow  FontSize='14' >
			<TableCell ColumnSpan='2' TextAlignment='Center' BorderBrush='Black' BorderThickness='1'>
				<Paragraph>
					<Bold>
						<LineBreak/><Run Text='TABLE I: TO ATTACK'></Run>
					</Bold>
				</Paragraph>
			</TableCell>
		</TableRow>
		<TableRow  FontSize='12' >
			<TableCell TextAlignment='Left' BorderBrush='Black' BorderThickness='1'>
				<Paragraph>
					<Bold>
						<Run Text='     SCENARIO'></Run>
					</Bold>
				</Paragraph>
			</TableCell>
			<TableCell  TextAlignment='Left' BorderBrush='Black' BorderThickness='1'>
				<Paragraph>
					<Bold>
						<Run Text='     ATTACK OCCURS'> </Run>
					</Bold>
				</Paragraph>
			</TableCell>
		</TableRow>
		<!-- row1	-->
		<TableRow  FontSize='12' >
			<TableCell TextAlignment='Left' Background='DodgerBlue'>
				<Paragraph>
					<Bold>
						<Run Text='     Advance'> </Run>
					</Bold>
				</Paragraph>
			</TableCell>
			<TableCell TextAlignment='Left' Background='DodgerBlue' >
				<Paragraph>
					<Run Text='     1-3'> </Run>
				</Paragraph>
			</TableCell>
		</TableRow>
		<!-- row2	-->
		<TableRow  FontSize='12' >
			<TableCell TextAlignment='Left' >
				<Paragraph>
					<Bold>
						<Run Text='     Battle'> </Run>
					</Bold>
				</Paragraph>
			</TableCell>
			<TableCell TextAlignment='Left' >
				<Paragraph>
					<Run Text='     1-5'> </Run>
				</Paragraph>
			</TableCell>
		</TableRow>
		<!-- row3	-->
		<TableRow  FontSize='12' >
			<TableCell TextAlignment='Left' Background='DodgerBlue'>
				<Paragraph>
					<Bold>
						<Run Text='     Counterattack'> </Run>
					</Bold>
				</Paragraph>
			</TableCell>
			<TableCell TextAlignment='Left' Background='DodgerBlue'>
				<Paragraph>
					<Run Text='     1-2'> </Run>
				</Paragraph>
			</TableCell>
		</TableRow>
	</TableRowGroup>
	<TableRowGroup>
		<TableRow  FontSize='12' >
			<TableCell ColumnSpan='2' TextAlignment='Left' BorderBrush='Black' BorderThickness='1'>
				<Paragraph>
					<Bold>
						<Run Text='Die Roll Modifier:'></Run>
					</Bold>
					<LineBreak/>
					<Run Text=' -1 December 1944 or later '></Run>
					<LineBreak/>
					<Run Text=' -1 Sherman is moving'></Run>
					<LineBreak/>
					<Run Text=' -1 Lead tank'></Run>
					<LineBreak/>
					<Run Text=' +3 Advancing Fire Zone'></Run>
					<LineBreak/>
					<Run Text=' -1 Attack from sectors 1, 2, or 3'></Run>
					<LineBreak/>
					<Run Text=' Note: A die roll of one is always a Panzerfaust attack regardless of modifications.'></Run>
				</Paragraph>
			</TableCell>
		</TableRow>
	</TableRowGroup>
	<TableRowGroup>
		<TableRow  FontSize='14' >
			<TableCell ColumnSpan='2' TextAlignment='Center' BorderBrush='Black' BorderThickness='1'>
				<Paragraph>
					<Bold>
						<LineBreak/><Run Text='TABLE II: TO HIT'></Run>
					</Bold>
				</Paragraph>
			</TableCell>
		</TableRow>
		<TableRow  FontSize='12' >
			<TableCell ColumnSpan='2' TextAlignment='Left' >
				<Paragraph>
			        <Run Text='  1-7   = Hit'></Run>
					<LineBreak/>
					<Run Text='  8-10 = Miss'></Run>
				</Paragraph>
			</TableCell>
		</TableRow>
		<TableRow  FontSize='12' >
			<TableCell ColumnSpan='2' TextAlignment='Left' BorderBrush='Black' BorderThickness='1'>
				<Paragraph>
					<Bold>
						<Run Text='  Die Roll Modifier:'></Run>
					</Bold>
					<LineBreak/>
					<Run Text='   +2 Sherman is moving'></Run>
					<LineBreak/>
					<Run Text='   +3 Advancing Fire Zone'></Run>
				</Paragraph>
			</TableCell>
		</TableRow>
	</TableRowGroup>
	<TableRowGroup>
		<TableRow  FontSize='14' >
			<TableCell ColumnSpan='2' TextAlignment='Center' BorderBrush='Black' BorderThickness='1'>
				<Paragraph>
					<Bold>
						<LineBreak/><Run Text='TABLE III: TO KILL'></Run>
					</Bold>
				</Paragraph>
			</TableCell>
		</TableRow>
		<TableRow  FontSize='12' >
			<TableCell ColumnSpan='2' TextAlignment='Left' >
				<Paragraph>
					<Run Text='  1-8   = Sherman KO' ></Run>
					<LineBreak/>
					<Run Text='  9-10 = No effect'></Run>
				</Paragraph>
			</TableCell>
		</TableRow>
		<TableRow  FontSize='12' >
			<TableCell ColumnSpan='2' TextAlignment='Left' BorderBrush='Black' BorderThickness='1'>
				<Paragraph>
					<Run Text=' If the Sherman is KO, go to '></Run>
					<InlineUIContainer>
						<Button Content='r4.81' FontFamily='Courier New'  FontSize='8'></Button>
					</InlineUIContainer>, step 5.
				</Paragraph>
			</TableCell>
		</TableRow>
	</TableRowGroup>
</Table>
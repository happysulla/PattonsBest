<Table BorderBrush='Black' BorderThickness='1' TextAlignment='Center' Background='LightGreen'>
   <Table.Columns>
      <TableColumn Width='200'/>
      <TableColumn Width='200'/>
   </Table.Columns>
   <TableRowGroup>
      <TableRow  FontSize='18' >
         <TableCell ColumnSpan='2' TextAlignment='Center' BorderBrush='Black' BorderThickness='1'>
            <Paragraph>
               <LineBreak/>GUN MALFUNCTION REPAIR TABLE<LineBreak/>
            </Paragraph>
         </TableCell>
      </TableRow>
      <TableRow  FontSize='12' >
         <TableCell ColumnSpan='2' TextAlignment='Left' BorderBrush='Black' BorderThickness='1'>
            <Paragraph>
               <Italic>
                  <Run FontSize='12' Text='Malfunctioning guns can be repaired by the following crewman: '></Run><LineBreak/>
                  <Run FontSize='12' Text='     Loader: main gun, coaxial MG, AA MG (Tanks 14 &amp; 16 only)'></Run><LineBreak/>
                  <Run FontSize='12' Text='     Assistant driver: bow MG '></Run><LineBreak/>
                  <Run FontSize='12' Text='     Commander: AA MG (except for Tanks 14 &amp; 16 only)'></Run><LineBreak/>
                  <Run FontSize='12' Text='     Gunner: may assist Loader repairing main gun'></Run><LineBreak/>
                  <Run FontSize='12' Text='A tank with a broken main gun is finished for the day once combat in this area is resolved. To attempt the repair, roll 2D:'></Run>
               </Italic>
            </Paragraph>
         </TableCell>
      </TableRow>
   </TableRowGroup>
   <TableRowGroup>
      <!-- Header	-->
      <TableRow  FontSize='12' >
         <TableCell TextAlignment='Right' BorderBrush='Black' BorderThickness='1'>
            <Paragraph>
               <Bold>
                  <Run Text='Die Roll     '></Run>
               </Bold>
            </Paragraph>
         </TableCell>
         <TableCell  TextAlignment='Left' BorderBrush='Black' BorderThickness='1'>
            <Paragraph>
               <Bold>
                  <Run Text='     Result'> </Run>
               </Bold>
            </Paragraph>
         </TableCell>
      </TableRow>
      <!-- row1	-->
      <TableRow  FontSize='12' >
         <TableCell TextAlignment='Right' Background='DarkSeaGreen'>
            <Paragraph>
               <Bold>
                  <Run Text='1-20     '> </Run>
               </Bold>
            </Paragraph>
         </TableCell>
         <TableCell TextAlignment='Left' Background='DarkSeaGreen' >
            <Paragraph>
               <Run Text='     Gun repaired'> </Run>
            </Paragraph>
         </TableCell>
      </TableRow>
      <!-- row2	-->
      <TableRow  FontSize='12' >
         <TableCell TextAlignment='Right' >
            <Paragraph>
               <Bold>
                  <Run Text='21-90     '> </Run>
               </Bold>
            </Paragraph>
         </TableCell>
         <TableCell TextAlignment='Left' >
            <Paragraph>
               <Run Text='     No Effect'> </Run>
            </Paragraph>
         </TableCell>
      </TableRow>
      <!-- row3	-->
      <TableRow  FontSize='12' >
         <TableCell TextAlignment='Right' Background='DarkSeaGreen'>
            <Paragraph>
               <Bold>
                  <Run Text='91-100+     '> </Run>
               </Bold>
            </Paragraph>
         </TableCell>
         <TableCell TextAlignment='Left' Background='DarkSeaGreen'>
            <Paragraph>
               <Run Text='     Gun broken remainder of day'></Run>
            </Paragraph>
         </TableCell>
      </TableRow>
   </TableRowGroup>
   <TableRowGroup>
      <TableRow  FontSize='12' >
         <TableCell ColumnSpan='2' TextAlignment='Left' BorderBrush='Black' BorderThickness='1'>
            <Paragraph>
               <Bold>
                  <Run Text='  Die Roll Modifier:'></Run>
               </Bold>
               <LineBreak/>
               <Run Text='   -(?) Crewmans rating'></Run>
               <LineBreak/>
               <Run Text='   -(?) Gunner rating if assisting main gun repair'></Run>
            </Paragraph>
         </TableCell>
      </TableRow>
   </TableRowGroup>
   <TableRowGroup>
      <TableRow  FontSize='12' >
         <TableCell ColumnSpan='2' TextAlignment='Left' BorderBrush='Black' BorderThickness='1'>
            <Paragraph>
               <Bold>
                  <Run Text='  NOTES:'></Run>
               </Bold>
               <LineBreak/>
               <Run Text=' (1) A roll of 98-100 before any modifications always equals gun broken.'></Run>
               <LineBreak/>
               <Run Text=' (2) Once a battle is resolved, immediately attempt to repair any malfunctioning guns. Roll normall on the repair table. If the gun does not break, it is automatically repaired.'></Run>
            </Paragraph>
         </TableCell>
      </TableRow>
   </TableRowGroup>
</Table>